@model Adres
@{
    ViewData["Title"] = "Adres Bilgileri";
}
<h1>Adres Bilgileri</h1>
@if (Model is not null)//null Kontrolü
{
    <table class="table">
        <tr>
            <td>Şehir</td>
            <td>@Model.Sehir</td>
        </tr>
        <tr>
            <td>İlçe</td>
            <td>@Model.Ilce</td>
        </tr>
        <tr>
            <td>Açık Adres</td>
            <td>@Model.AcikAdres</td>
        </tr>
   </table>
}
<h3> Adres Düzenle(Klasik)</h3>
@using (Html.BeginForm())
{
    <table class="table  table-striped  table-hover">
        <tr>
            <td>Şehir</td>
            <td>@Html.EditorFor(Model=>Model.Sehir)</td>
        </tr>
        <tr>
            <td>ilce</td>
            <td>@Html.EditorFor(Model=>Model.Ilce)</td>
        </tr>
        <tr>
            <td>Açık Adres</td>
            <td>@Html.TextAreaFor(Model=>Model.AcikAdres)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </td>
        </tr>
        
    </table>
    <h3> Adres Düzenle(Yeni)</h3>
    <hr />
    <form asp-action="AdresDetay" method="post">
       
        <table class="table  table-striped  table-hover">
            <tr>
                <td>Şehir</td>
                <td><input asp-for="Sehir" class="form-control"/></td>
            </tr>
            <tr>
                <td>İlçe</td>
                <td><input asp-for="Ilce" class="form-control" /></td>
            </tr>
            <tr>
                <td>Açık Adres</td>
                <td>
                    <textarea asp-for="AcikAdres" class="form-control"></textarea>
               </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </td>
            </tr>

        </table>
    </form>
}

